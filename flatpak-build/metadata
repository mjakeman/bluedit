[Session Bus Policy]
ca.desrt.dconf=talk

[Environment]
DCONF_USER_CONFIG_DIR=.config/dconf

[Extension com.mattjakeman.bluedit.Debug]
directory=lib/debug
autodelete=true
no-autodownload=true

[Build]
built-extensions=com.mattjakeman.bluedit.Debug;